<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragments.DailyEditFragment">


    <beini.com.dailyapp.ui.view.GlobalEditText
        android:id="@+id/daily_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp" />

    <beini.com.dailyapp.ui.view.GlobalEditText
        android:id="@+id/daily_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp" />

    <beini.com.dailyapp.ui.view.GlobalEditText
        android:id="@+id/daily_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp" />


    <ImageView
        android:id="@+id/image_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp" />


    <beini.com.dailyapp.ui.view.GlobalButton
        android:id="@+id/btn_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="commit" />

    <beini.com.dailyapp.ui.view.GlobalButton
        android:id="@+id/btn_add_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="add image" />
</LinearLayout>
